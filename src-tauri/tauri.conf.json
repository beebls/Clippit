{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "Clippit",
		"version": "../package.json"
	},
	"tauri": {
		"allowlist": {
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"startDragging": true,
				"unmaximize": true,
				"unminimize": true
			},
			"all": true,
			"shell": {
				"all": true,
				"execute": true,
				"open": true,
				"scope": [
					{ "name": "binaries/ffmpeg", "sidecar": true },
					{ "name": "binaries/ffprobe", "sidecar": true }
				],
				"sidecar": true
			},
			"protocol": {
				"all": true,
				"asset": true,
				"assetScope": ["$APPCACHE/**/*"]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"appimage": {
				"bundleMediaFramework": true
			},
			"externalBin": ["binaries/ffmpeg", "binaries/ffprobe"],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.beebles.clippit",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": ["appimage", "msi", "updater"],
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": "default-src 'self' asset: https://asset.localhost; img-src 'self'; style-src 'self' 'unsafe-inline';"
		},
		"updater": {
			"active": true,
			"endpoints": ["https://raw.githubusercontent.com/beebls/Clippit/main/latest.json"],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUzRjhFQ0MxNjI1Nzg0OTEKUldTUmhGZGl3ZXo0VTVqc1RNc1VlZzZaWHUrelk5dHFIQnBhNWJzSkx2RVk5TkpwOWJYczg0Q0QK"
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 768,
				"resizable": true,
				"title": "Clippit",
				"decorations": false,
				"width": 1366,
				"transparent": true,
				"minWidth": 1000,
				"minHeight": 600
			}
		]
	}
}
