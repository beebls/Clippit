{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "beeblesseries-moments",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"window": {
				"all": false,
				"center": false,
				"close": true,
				"create": false,
				"hide": true,
				"maximize": false,
				"minimize": false,
				"print": false,
				"requestUserAttention": false,
				"setAlwaysOnTop": false,
				"setClosable": false,
				"setContentProtected": false,
				"setCursorGrab": false,
				"setCursorIcon": false,
				"setCursorPosition": false,
				"setCursorVisible": false,
				"setDecorations": false,
				"setFocus": false,
				"setFullscreen": false,
				"setIcon": false,
				"setIgnoreCursorEvents": false,
				"setMaxSize": false,
				"setMaximizable": false,
				"setMinSize": false,
				"setMinimizable": false,
				"setPosition": false,
				"setResizable": false,
				"setSize": false,
				"setSkipTaskbar": false,
				"setTitle": false,
				"show": true,
				"startDragging": true,
				"unmaximize": true,
				"unminimize": true
			},
			"all": true,
			"shell": {
				"all": true,
				"execute": true,
				"open": true,
				"scope": [
					{ "name": "binaries/ffmpeg", "sidecar": true },
					{ "name": "binaries/ffprobe", "sidecar": true }
				],
				"sidecar": true
			},
			"protocol": {
				"all": true,
				"asset": true,
				"assetScope": ["$APPCACHE/**/*"]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": ["binaries/ffmpeg", "binaries/ffprobe"],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.beebles.clippit",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "Clippit",
				"decorations": false,
				"width": 800,
				"transparent": true,
				"minWidth": 800,
				"minHeight": 600
			}
		]
	}
}
